<h2> <%= @ingredient.name() %></h2>
<hr>

<% if @ingredient_recipes.any? %>
  <h3> Currently ingredients: </h3>
  <ul>
    <%@ingredient_recipes.each do |recipe|%>
      <li><%=recipe.name%></li>
    <%end%>
  </ul>

<% else %>
    <p>This recipe has no ingredients</p>
    <p><a href="/recipes">Add an ingredient to database</a></p>
<% end %>
<hr>

<h3>Update ingredients:</h3>
  <form action="/ingredients/<%= @ingredient .id() %>" method="post">
  <input name="_method" value="patch" type="hidden">
  <% if @unassigned_recipe.any? %>
    <label>Add recipes</label><br>
    <% @unassigned_recipes.each do |recipe|%>
      <label>
        <%="<input type='checkbox' name='recipes_to_add[]' value='#{recipe.id}'> #{recipe.name}"%>
      </label><br>
    <% end %>
  <% end %>

  <% if @ingredient_recipes.any? %>
    <label>Remove recipe from recipe</label><br>
    <% @recipe_ingredients.each do |ingredient|%>
      <label>
        <%="<input type='checkbox' name='ingredients_to_delete[]' value='#{ingredient.id}'>#{ingredient.name}"%>
      </label><br>
    <% end %>
  <% end %>
  <button type="submit">Submit</button>
</form>
<hr>
